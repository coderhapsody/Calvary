@model Calvary.ViewModels.Activities.Schedule.CreateEditViewModel

<div style="width: 550px;">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "addEditForm", name = "addEditForm" }))
    {        
        @Html.HiddenFor(m => m.Id)
        @FormOperationHelper.RenderAuditFields(Model)
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-4">@Html.LabelFor(m => m.Name): </div>
                <div class="col-md-6">
                    @Html.Kendo().TextBoxFor(m => m.Name).HtmlAttributes(new { style="width:400px;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">@Html.LabelFor(m => m.IsActive): </div>
                <div class="col-md-6">
                    @Html.Kendo().CheckBoxFor(m => m.IsActive)
                </div>
            </div>            

            <div class="form-group">
                <div class="col-md-4"></div>
                <div class="col-md-6">
                    <button type="submit" id="btnSave" name="btnSave" class="k-button">Simpan</button>                    
                    <button type="button" id="btnClose" name="btnClose" class="k-button">Tutup</button>
                </div>
            </div>
        </div>
    }
</div>
<script>
    $(function () {
        $("#btnClose").click(scheduleGroup.closeClick);
        $("#btnSave").click(scheduleGroup.saveClick);
    });
</script>