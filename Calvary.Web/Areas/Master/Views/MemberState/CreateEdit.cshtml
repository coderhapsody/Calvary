@model Calvary.ViewModels.Master.MemberState.CreateEditViewModel

<div style="width: 550px;">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "addEditForm", name = "addEditForm" }))
    {
        @Html.HiddenFor(m => m.Id)

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-3">@Html.LabelFor(m => m.Code): </div>
                <div class="col-md-7">
                    @Html.Kendo().TextBoxFor(m => m.Code).HtmlAttributes(new { style = "width:100px;" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">@Html.LabelFor(m => m.Description): </div>
                <div class="col-md-7">
                    @Html.Kendo().EditorFor(m => m.Description).Tools(tool => tool.Clear()).HtmlAttributes(new { style = "width:400px; height: 50px;" })
                </div>
                </div>
            <div class="form-group">
                <div class="col-md-3">@Html.LabelFor(m => m.IsActive): </div>
                <div class="col-md-7">
                    @Html.Kendo().CheckBoxFor(m => m.IsActive)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <div class="col-md-7">
                    <button type="submit" id="btnSave" name="btnSave" class="k-button">Simpan</button>
                    <button type="button" id="btnClose" name="btnClose" class="k-button">Tutup</button>
                </div>
            </div>
        </div>
    }
</div>
<script>
    $(function () {
        $("#btnClose").click(memberState.closeClick);
        $("#btnSave").click(memberState.saveClick);
    });
</script>