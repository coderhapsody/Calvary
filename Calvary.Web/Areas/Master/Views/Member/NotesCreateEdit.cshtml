@model Calvary.ViewModels.Master.Member.MemberNoteViewModel

<div style="width: 650px; padding: 10px 10px 10px 10px;">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmMemberNotes", name = "frmMemberNotes" }))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.MemberId)
        @FormOperationHelper.RenderAuditFields(Model)
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Notes)
                </div>
                <div class="col-md-7">
                    @Html.Kendo().EditorFor(model => model.Notes).Tools(tools => tools.Clear())
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <div class="col-md-7">
                    <button type="submit" id="btnSaveNotes" name="btnSaveNotes" class="k-button">Simpan</button>
                    <button type="button" id="btnCloseNotes" name="btnCloseNotes" class="k-button">Tutup</button>
                </div>
            </div>
        </div>
    }
</div>

<script>
    $(function () {
        $("#btnSaveNotes").click(memberNotes.saveMemberNotes);
        $("#btnCloseNotes").click(memberNotes.closeMemberNotes);
        memberDetail.initializeFields();
    });
</script>
